<%= f.input :video_url, :label => "Lien vidéo (public)" %>
<div class='control-group'>
    <label class="string control-label"><%= "Vidéo (pro)".html_safe %></label>
    <div class='controls'>
      <% if f.object.video_hd.present? %>
      <div class="clearfix">
        <label class="string control-label">
          <%= f.check_box :remove_video_hd if f.object.video_hd.present? %>
          <%= "Supprimer la vidéo".html_safe %>
        </label>
      </div>
      <% end %>
      <div class="clearfix">
        <%= f.file_field :video_hd, :class => 'file' %>
      </div>
    </div>
</div>
<div class='control-group'>
    <label class="string control-label"><%= "Images (pro)".html_safe %></label>
