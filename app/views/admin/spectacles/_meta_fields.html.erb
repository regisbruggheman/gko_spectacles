      <% if f.object.images_hd.present? %>
      <div class="clearfix">
        <label class="string control-label">
          <%= f.check_box :remove_images_hd %> <%= "Supprimer les images".html_safe %>
        </label>
      </div>
      <% end %>
      <div class="clearfix">
        <%= f.file_field :images_hd, :class => 'file' %>
      </div>
    </div>
</div>

<% if translating? %>
<div class='control-group'>
    <label class="string control-label"><%= "Fiche technique (pro)".html_safe %></label>
    <div class='controls upload_file_preview'>
      <% if f.object.file_tech_en.present? %>
          <p class='js-file-preview'><%= link_to "Preview", f.object.file_tech_en.url, :target => "_blank"  %></p>
      <% end %>
      <% if f.object.file_tech_en.present? %>
      <div class="clearfix">
        <label class="string control-label">
          <%= f.check_box :remove_file_tech_en %> <%= "Supprimer le fichier".html_safe %>
        </label>
      </div>
      <% end %>
      <div class='file-field' style="display:<%= f.object.file_tech_en.present? ? 'none' : 'block' %>">
        <%= f.file_field :file_tech_en, :class => 'file' %>
      </div>
      <br class='clearfix'\>
      <%= btn_to(t(:"admin.documents.replace_file"), "",
                 :class => "small change-upload-file-btn",
                 :inline => true,
                 :data => {:toggle => "toggle", :text => t(:'admin.documents.cancel_replace_file')}) if f.object.file_tech_en.present? %>
    </div>
</div>
